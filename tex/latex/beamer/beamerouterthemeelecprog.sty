%%%%%%%%%
% Theme %
%%%%%%%%%

% Navigation
\beamertemplatenavigationsymbolsempty

% Footer
\setbeamertemplate{footline} {%
  \begin{beamercolorbox}[wd=\beamer@paperwidth,ht=2em]{background}
  \end{beamercolorbox}
}

\DeclareOptionBeamer{number} {
  \setbeamertemplate{footline} {%
    \begin{beamercolorbox}[wd=\beamer@paperwidth,ht=2em]{footline}
      \hfill%
      \usebeamercolor[fg]{page number in head/foot}%
      \usebeamerfont{page number in head/foot}%
      \insertframenumber\kern.5em\vskip.5em%
    \end{beamercolorbox}
  }
}
\ProcessOptionsBeamer

% Frame title
\setbeamerfont{frametitle}{size=\large,series=\bfseries}

\setbeamertemplate{frametitle} {% BEHOLD THE HACKYNESS
  \begin{beamercolorbox}[wd=\beamer@paperwidth,sep=0.3cm]{frametitle}
    \usebeamerfont{frametitle}%
    \vbox{}\vskip-1ex%
    \strut\insertframetitle\strut\par%
    \vskip-1ex%
    \vskip-.3cm%
  \end{beamercolorbox}%
}
