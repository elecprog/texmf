\ifcsname theorem\endcsname
  % Beamer, don't redefine
\else
  \newcommand{\GetThmTranslation}[1]{\noexpand\GetTranslation{#1}}

  % Theorem environments
  \theoremstyle{plain}
  \newtheorem{theorem}{\GetThmTranslation{theorem}}
  \newtheorem{lemma}[theorem]{\GetThmTranslation{lemma}}
  \newtheorem{corollary}{\GetThmTranslation{corollary}}[theorem]
  \newtheorem{proposition}[theorem]{\GetThmTranslation{proposition}}
  \newtheorem{conjecture}[theorem]{\GetThmTranslation{conjecture}}
  \newtheorem{criterion}[theorem]{\GetThmTranslation{criterion}}
  \newtheorem{assertion}[theorem]{\GetThmTranslation{assertion}}

  \theoremstyle{definition}
  \newtheorem{definition}{\GetThmTranslation{definition}}
  \newtheorem{condition}{\GetThmTranslation{condition}}
  \newtheorem{problem}{\GetThmTranslation{problem}}
  \newtheorem{example}{\GetThmTranslation{example}}
  \newtheorem{exercise}{\GetThmTranslation{exercise}}
  \newtheorem{algorithm}{\GetThmTranslation{algorithm}}
  \newtheorem{question}{\GetThmTranslation{question}}
  \newtheorem{axiom}{\GetThmTranslation{axiom}}
  \newtheorem{property}{\GetThmTranslation{property}}
  \newtheorem{assumption}{\GetThmTranslation{assumption}}
  \newtheorem{hypothesis}{\GetThmTranslation{hypothesis}}

  \theoremstyle{remark}
  \newtheorem*{remark}{\GetThmTranslation{remark}}
  \newtheorem*{note}{\GetThmTranslation{note}}
  \newtheorem*{notation}{\GetThmTranslation{notation}}
  \newtheorem{claim}{\GetThmTranslation{claim}}
  \newtheorem*{summary}{\GetThmTranslation{summary}}
  \newtheorem*{acknowledgement}{\GetThmTranslation{acknowledgement}}
  \newtheorem*{conclusion}{\GetThmTranslation{conclusion}}

  % Cases within proofs
  \theoremstyle{remark}
  \newtheorem{case}{\GetThmTranslation{case}}
  \addtotheorempreheadhook[proof]{\setcounter{case}{0}}

