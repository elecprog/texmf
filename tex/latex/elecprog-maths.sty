% Symbols
\newcommand{\newmsymb}[2]{%
  \newcommand{#1}{\ensuremath{#2}}}

% Number sets
\newmsymb{\NN}{\mathbb{N}}
\newmsymb{\ZZ}{\mathbb{Z}}
\newmsymb{\QQ}{\mathbb{Q}}
\newmsymb{\RR}{\mathbb{R}}
\newmsymb{\CC}{\mathbb{C}}

% Operators
